{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@components/*": ["app/frontend/components/*"],
      "@utils/*": ["app/frontend/utils/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "app/frontend/components/**/*.vue",
    "app/frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
