%nav.mb-3{ 'aria-label': 'breadcrumb' }
  %ol.breadcrumbs-list
    %li.breadcrumbs-list-item
      = link_to user_panel_dashboard_path, class: 'breadcrumbs-list-item__link' do
        %i.icon.icon-home.text-2xl
        %span Home
    %li.breadcrumbs-list-item
      = link_to user_panel_checklists_path, class: 'breadcrumbs-list-item__link' do
        %i.icon.icon-chevron-right.text-2xl
        %span Checklists
    - if @checklist
      %li.breadcrumbs-list-item
        = link_to user_panel_checklist_path(@checklist), class: 'breadcrumbs-list-item__link' do
          %i.icon.icon-chevron-right.text-2xl
          %span= @checklist.name
