%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %meta{ charset: 'utf-8' }/

    = stylesheet_link_tag wicked_pdf_asset_base64 'pdf'

    = javascript_include_tag wicked_pdf_asset_base64 'pdf_number_pages'
  %body{ onload: 'number_pages()' }
    %footer.text-muted
      %table
        %tbody
          %tr
            %td Generated by #{presenter.user.first_name} at #{Time.current}
            %td.text-right
              .page-count
                %span.page
                \/
                %span.topage
