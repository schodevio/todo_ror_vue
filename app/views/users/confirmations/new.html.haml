.auth-page
  = link_to '[App Name]', '#', class: 'auth-page__brand'

  .auth-page__card
    .p-6.space-y-6
      %h1.auth-page__title Resend confirmation

      %div{ data: { behavior: 'resend-confirmation-form' } }
        %resend-confirmation-form{ 'v-bind': render(partial: 'users/confirmations/new_form') }
          = render partial: 'users/confirmations/new_form_skeleton'

      = vite_typescript_tag 'entrypoints/user_auth/resendConfirmationForm.ts'
