.auth-page
  = link_to '[App Name]', '#', class: 'auth-page__brand'

  .auth-page__card
    .p-6.space-y-6
      %h1.auth-page__title Forgot password?

      %div{ data: { behavior: 'forgot-password-form' } }
        %forgot-password-form{ 'v-bind': render(partial: 'users/passwords/new_form') }
          = render partial: 'users/passwords/new_form_skeleton'

      = vite_typescript_tag 'entrypoints/user_auth/forgotPasswordForm.ts'
